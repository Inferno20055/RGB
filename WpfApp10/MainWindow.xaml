<Window x:Class="WpfApp10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp10"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <Grid>
        <Slider x:Name="SliderG" Minimum="0" Maximum="255" HorizontalAlignment="Left" Margin="161,117,0,0" VerticalAlignment="Top" Width="240" Height="50" ValueChanged="ColorSlider_ValueChanged"/>
        <Slider x:Name="SliderB" Minimum="0" Maximum="255" HorizontalAlignment="Left" Margin="161,172,0,0" VerticalAlignment="Top" Width="240" Height="50" ValueChanged="ColorSlider_ValueChanged"/>
        <Label Content="R" HorizontalAlignment="Left" Margin="55,55,0,0" VerticalAlignment="Top" Foreground="White" />
        <Label Content="G" HorizontalAlignment="Left" Margin="55,116,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="B" HorizontalAlignment="Left" Margin="55,171,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Slider x:Name="SliderR" Minimum="0" Maximum="255" HorizontalAlignment="Left" Margin="161,55,0,0" VerticalAlignment="Top" Width="240" Height="50" ValueChanged="ColorSlider_ValueChanged"/>

    </Grid>
</Window>
